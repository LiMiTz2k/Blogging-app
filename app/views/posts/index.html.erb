<%= render 'layouts/navbar' %>
  <div class="row">
    <div class="container-fluid">
      <div class="col-md-4">
        <div class="side-bar">
          <div class="">
            <%=image_tag avatar_url(current_user) %>
            <%= current_user.full_name %>
            <%= link_to user_handler(current_user), post_path(current_user) %>
            <% if admin? %>
            <%= link_to 'Admin', edit_user_registration_path %>
            <% else %>
            <%= link_to 'Settings', edit_user_registration_path %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="post-section">
          <% @posts.each do |p| %>
          <div class="row">
              <div class="post">
                <%= p.content %>
              </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
